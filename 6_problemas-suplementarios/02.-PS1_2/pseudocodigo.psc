Funcion circulo (radio)
	areaCirculo <- (PI*radio^2)
	circunferenciaCirculo <- (2*PI*radio)
	Escribir 'El radio del circulo es: ', radio,' y su area es: ', areaCirculo,' y su circunferencia es: ', circunferenciaCirculo
FinFuncion

Algoritmo PS1_2
	Escribir 'Ingresa el RADIO del circulo'
	Leer radNumero
	circulo(radNumero)
FinAlgoritmo
